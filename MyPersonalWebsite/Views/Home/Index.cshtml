<div id="myModal" class="reveal-modal" style="-moz-border-radius: 0px; -webkit-border-radius: 0px; border-radius: 0px;">
    <h3>
        <strong>Leave Me a Message</strong>
    </h3>
    <br />
    <div class="input-control text">
        <input type="text" placeholder="Your Name" id="senderName" name="senderName">
        <button class="btn-clear" tabindex="-1" type="button"></button>
    </div>
    <br />
    <div class="input-control text">
        <input type="email" placeholder="Your eMail (example@mail.com)" id="senderEmail" name="senderEmail" required>
        <button class="btn-clear" tabindex="-1" type="button"></button>
    </div>
    <br />
    <div class="input-control textarea">
        <textarea id="message" placeholder="Type in your message..." required></textarea>
    </div>

    <br />
    <input type="submit" id="btnSubmit" class="bg-color-purple" value="Send" />
    <a class="close-reveal-modal">&#215;</a>
</div>
<script>
   

    $('#btnSubmit').click(function() {
        sendMessage();
    });

    function sendMessage() {

        var formData = new FormData();
        formData.append("SenderName", $('#senderName').val());
        formData.append("SenderEmail", $('#senderEmail').val());
        formData.append("MailBody", $('#message').val());

        $.ajax({
            url: '@Url.Action("PostMail", "MailApi")',
            type: "POST",
            contentType: false,
            processData: false,
            data: formData,
            success: function (data, status, xhr) {
				//Nothing to do
				if (data == "email") {
					alert('The eMail Address is in incorrect format. Please specify a valid one.');
					return;
				}
				//Close Modal
				var modal = $('.reveal-modal');
				topMeasure = parseInt(modal.css('top'));
				topOffset = modal.height() + topMeasure;
				//locked = false;
				$('.reveal-modal-bg').delay(300).fadeOut(300);
				modal.animate({
					"top": $(document).scrollTop() - topOffset + 'px',
					"opacity": 0
				}, 150, function () {
					modal.css({ 'top': topMeasure, 'opacity': 1, 'visibility': 'hidden' });
					// unlockModal();
				});
				$('#senderName').val("");
				$('#senderEmail').val("");
				$('#message').val("");
			},
            error: function (xhr, status, error) {
				alert('Message could not be sent. Please try again.');
			}
		});
    }

    $(function () {
        $(".live-tile").liveTile();
    });
</script>
